<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.supportorphans">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-feature android:name="android.hardware.bluetooth" android:required="false" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Support Orphans"
        android:roundIcon="@drawable/charity"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashActivity"><intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name="RegistrationActivity"
            android:parentActivityName=".LoginActivity"></activity>
        <activity android:name=".ItemsActivity">

        </activity>
        <activity android:name=".ClothActivity">

        </activity>
        <activity android:name=".ClothesActivity">

        </activity>
        <activity
            android:name=".FoodActivity"
            android:parentActivityName=".ItemsActivity">

        </activity>
        <activity android:name=".ItemsAdminActivity">

        </activity>
        <activity android:name=".ItemsViewActivity"> </activity>
        <activity
            android:name=".OrphanageActivity"
            android:parentActivityName=".ItemsAdminActivity">

        </activity>
        <activity android:name=".ToyActivity"></activity>
    </application>
</manifest>
